{{page-title "Subscribers"}}


<!-- Begin Page Content -->
<div class="container-fluid">

  <!-- Page Heading -->
  <div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Subscribers</h1>
    <LinkTo @route='main.subscribers.edit' @model='new' class="btn btn-primary">Add</LinkTo>
  </div>

  <div class="row">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Registered date</th>
          <th scope="col">Total payments</th>
          <th scope="col">Status</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each this.rows as |row|}}
          <LinkTo @tagName="tr" @route="main.subscribers.edit" @model={{row}}>
            <th scope="row">{{row.name}}</th>
            <td>{{moment-format row.date 'DD.MM.YYYY'}}</td>
            <td>{{total row.payments 'sum'}}</td>
            <td>
              <span class="{{if row.status " bg-primary" "bg-danger" }} badge text-white">
                {{if row.status "active" "inactive"}}
              </span>
            </td>
            <td>
              <LinkTo @route='main.subscribers.edit' @model={{row}} class="btn btn-outline-primary">Edit</LinkTo>
            </td>
          </LinkTo>
        {{/each}}
      </tbody>


    </table>
  </div>

</div>
<!-- /.container-fluid -->